// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
}

// Modelo para almacenar los leads del formulario
model Lead {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String
  clinic    String?  // Nombre de clínica y ciudad (opcional)
  revenue   String?  // Facturación anual (opcional)
  challenge String?  // Mayor reto (opcional)
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
}

// Modelo para administradores (acceso a la base de datos)
model Admin {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String   // Hash de la contraseña
  createdAt DateTime @default(now())
}
